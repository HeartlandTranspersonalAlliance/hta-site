---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Contact"
    title="Connect with Heartland Transpersonal Alliance"
    subtitle="For partnerships, community programming, or board-related inquiries, reach out through the channels below."
    callToAction={{ text: 'Apply for Board', href: getPermalink('/board-app') }}
  />

  <Features2
    columns={3}
    items={[
      {
        title: 'Email',
        description: 'info@psychedelickc.org',
        icon: 'tabler:mail',
      },
      {
        title: 'Website',
        description: 'https://heartlandta.org',
        icon: 'tabler:world',
      },
      {
        title: 'Facebook',
        description: 'facebook.com/profile.php?id=61569597747801',
        icon: 'tabler:brand-facebook',
      },
    ]}
  />
</Layout>
