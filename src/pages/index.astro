---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getPermalink } from '~/utils/permalinks';

import heroImage from '~/assets/images/hta/hero-image.jpg';

const metadata = {
  title: 'Heartland Transpersonal Alliance',
  ignoreTitleTemplate: true,
  description:
    'A nonprofit organization fostering community, education, harm reduction, and integration around the safe, responsible exploration of consciousness.',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Heartland Transpersonal Alliance"
    actions={[
      {
        variant: 'primary',
        text: 'Explore Initiatives',
        href: getPermalink('/initiatives'),
      },
      {
        text: 'Meet the Board',
        href: getPermalink('/board'),
      },
    ]}
    image={{ src: heroImage, alt: 'Heartland Transpersonal Alliance' }}
  >
    <Fragment slot="title">
      Professional, community-centered leadership for <span class="text-accent dark:text-white">safe and informed</span>
      consciousness work.
    </Fragment>

    <Fragment slot="subtitle">
      We build practical pathways for education, harm reduction, and integration in Kansas City through nonprofit
      programming, collaboration, and public-facing resources.
    </Fragment>
  </Hero>

  <Features
    id="focus-areas"
    tagline="Core Focus"
    title="What HTA delivers"
    subtitle="Our work is designed for trust, safety, and long-term community impact."
    items={[
      {
        title: 'Community Infrastructure',
        description:
          'Build and support networks where people can process meaningful experiences in structured, peer-supported settings.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Education and Public Literacy',
        description:
          'Publish clear information and host events that improve understanding across clinical, cultural, and social contexts.',
        icon: 'tabler:school',
      },
      {
        title: 'Harm Reduction',
        description:
          'Promote evidence-informed practices that improve safety at events and in community-facing programs.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Integration Pathways',
        description:
          'Connect individuals with peer and professional resources for post-experience processing and support.',
        icon: 'tabler:lifebuoy',
      },
    ]}
  />

  <Content
    isReversed
    tagline="Initiatives"
    title="A coordinated ecosystem, not isolated programs"
    items={[
      {
        title: 'Kansas City Psychedelic Integration Circle',
        description: 'Confidential, non-judgmental peer integration community.',
      },
      {
        title: 'Psychedelic Society of Kansas City',
        description: 'Public-facing events, culture, and education programming.',
      },
      {
        title: 'Safe Journey Sanctum',
        description: 'Compassionate festival support, overdose prevention, and staff training.',
      },
    ]}
    image={{ src: heroImage, alt: 'HTA initiatives' }}
    callToAction={{ text: 'View all initiatives', href: getPermalink('/initiatives') }}
  >
    <Fragment slot="content">
      HTA aligns multiple programs under one mission so members, partners, and community stakeholders can engage through
      trusted channels.
    </Fragment>
  </Content>

  <BlogLatestPosts
    title="Latest News"
    information="Board updates, organizational announcements, and major initiative milestones."
    linkText="View all news"
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Apply to the Board',
        href: getPermalink('/board-app'),
      },
      {
        text: 'Contact HTA',
        href: getPermalink('/contact'),
      },
    ]}
    title="Help shape the next phase of HTA"
    subtitle="We are actively building board capacity across community activism, medicine, psychotherapy, social work, and education."
  />
</Layout>
