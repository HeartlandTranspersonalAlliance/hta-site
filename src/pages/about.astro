---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps2 from '~/components/widgets/Steps2.astro';

const metadata = {
  title: 'About HTA',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="About HTA"
    title="Mission-aligned nonprofit leadership"
    subtitle="Heartland Transpersonal Alliance advances safe, responsible exploration of consciousness through community, education, harm reduction, and integration."
  />

  <Features2
    title="What guides our work"
    columns={3}
    items={[
      {
        title: 'Community First',
        description:
          'We build accessible spaces where people can connect, process, and learn without stigma or gatekeeping.',
        icon: 'tabler:users',
      },
      {
        title: 'Evidence-Informed Practice',
        description:
          'Programs are informed by clinical insight, lived experience, and emerging best practices in harm reduction.',
        icon: 'tabler:stethoscope',
      },
      {
        title: 'Responsible Integration',
        description:
          'We prioritize what happens after intense experiences: integration, support, and sustainable well-being.',
        icon: 'tabler:heart-handshake',
      },
    ]}
  />

  <Steps2
    title="How HTA operates"
    subtitle="A practical model for long-term organizational impact."
    items={[
      {
        title: 'Build trusted programs',
        description: 'Launch and support initiatives that serve the Kansas City community with clear safety standards.',
      },
      {
        title: 'Develop partnerships',
        description:
          'Coordinate with educators, clinicians, and local leaders to improve reach and continuity of care.',
      },
      {
        title: 'Strengthen governance',
        description: 'Expand board capacity and organizational systems that keep the mission stable over time.',
      },
    ]}
  />
</Layout>
